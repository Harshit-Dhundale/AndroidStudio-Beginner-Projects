<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewForContextMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/long_press_me_for_context_menu"
        android:padding="32dp" />

    <Button
        android:id="@+id/showPopupMenuButton"
        android:layout_below="@id/textViewForContextMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_popup_menu"
        android:onClick="showPopupMenu" />

</RelativeLayout>
